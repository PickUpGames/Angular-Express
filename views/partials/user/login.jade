
div(id='form')
  div(style='padding:10px 20px;')
    h4
      span.glyphicon.glyphicon-lock
      |  Login
  div(style='padding:20px 20px;')
    form(name='myform', role='form')
      .form-group
        label(for='username')
          span.glyphicon.glyphicon-user
          |  Username
        input#username.form-control(type='text', name='username', ng-model='form.username', placeholder='Enter username')
        span.help-block(ng-show='myform.username.$dirty') Username is required
      .form-group
        label(for='psw')
          span.glyphicon.glyphicon-eye-open
          |  Password
        input#psw.form-control(type='password', name='password', ng-model='form.password', placeholder='Enter password')
        span.help-block(ng-show='myform.password.$dirty') Password is required
      .checkbox
        label
          input(type='checkbox', value='', checked='')
          | Remember me
      .form-actions
        button.btn.btn-success.btn-block(ng-click="login()", ng-disabled='myform.username.$untouched')
          span.glyphicon.glyphicon-off
          |  Login
      .alert.alert-danger(ng-show='error') {{error}}
  div
    p
      | Not a member? 
      a(href='/register') Sign Up
    p
      a(href='/forget') Forgot Password?


