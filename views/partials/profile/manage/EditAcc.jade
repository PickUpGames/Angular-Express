#view-profile(ng-show="choice=='editA'")
  form(role='form')
    .form-group
      label(for='name')
        span#green.glyphicon.glyphicon-user
        | Name
      input#name.form-control(type='text', ng-model='form.name')
    .form-group
      label(for='usrname')
        span.glyphicon.glyphicon-user
        | Username
      input#usrname.form-control(type='text', ng-model='form.username')
    .form-group
      label(for='passw')
        span.glyphicon.glyphicon-eye-open
        | Password
      input#passw.form-control(type='text', ng-model='form.password')
    .form-group
      label(for='b-day')
        span.glyphicon.glyphicon-time
        | Birthday
      input#b-day.form-control(type='date', ng-model='form.birthday')
    .form-group
      label(for='loc')
        span.glyphicon.glyphicon-road
        | Location
      input#loc.form-control(type='text', ng-model='form.location')
    button.btn.btn-success.btn-block(ng-click='EditA()')
      span.glyphicon.glyphicon-ok
      |  Edit
    .alert.alert-danger(ng-show='status=="Username already taken."') {{status}}
    .alert.alert-success(ng-show='status && status!="Username already taken."') {{status}}