.jumbotron.text-center
  h1 Events
.col-sm-1.col-md-2
.col-sm-10.col-md-8
  .col-sm-6.col-md-3
    .thumbnail.tile.tile-medium
      a(href='/addEvent')
        img#eventImg(src='/img/addEventImg.png', alt='AddEvent')
        .caption
          b#eventTitle [Add Event]
  .col-sm-6.col-md-3(ng-repeat='event in dbevents')
    .thumbnail.tile.tile-medium
      a(href='viewEvent/{{event._id}}')
        img#eventImg(ng-show="event.eventType'", src='{{event.src}}', alt='{{event.alt}}')
        .caption
          b#eventTitle {{event.eventName}}
  