.jumbotron.text-center
  h1 There are {{events.length}} events!
.col-sm-6.col-md-3
  .thumbnail.tile.tile-medium
    a(href='/addEvent')
      .caption
        b [Add Event]
      img#eventImg(src='/img/addEventImg.png', alt='AddEvent')
.col-sm-6.col-md-3(ng-repeat='event in events')
  .thumbnail.tile.tile-medium
    a(href='viewEvent/{{event._id}}')
      .caption
        b {{event.eventName}}
      img#eventImg(src='/img/sports.png', alt='Sports')
  